<UserControl
    x:Class="Unigram.Controls.ForwardDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="500"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Interactions="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Media="using:Microsoft.Xaml.Interactions.Media"
    x:Name="fDialog"
    Loaded="fDialog_Loaded"
    SizeChanged="fDialog_SizeChanged">

    <UserControl.Resources>

        <Storyboard x:Name="ForwardMenuShowStoryboard">
            <DoubleAnimation Storyboard.TargetName="ForwardMenuOverlay"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             From="0"
                             To="0.5"
                             Duration="00:00:00.200"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBox"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             From="0"
                             To="1"
                             Duration="00:00:00.200"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBoxTransform" 
                             Storyboard.TargetProperty="Y"
                             Duration="0:0:0.2" From="20" To="0" >
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase  EasingMode="EaseOut"  />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="ForwardMenuHideStoryboard">
            <DoubleAnimation Storyboard.TargetName="ForwardMenuOverlay"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             To="0"
                             Duration="00:00:00.200"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBox"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             From="1"
                             To="0"
                             Duration="00:00:00.200"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBoxTransform" 
                             Storyboard.TargetProperty="Y"
                             Duration="0:0:0.2" From="0" To="20" >
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase  EasingMode="EaseOut"  />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="ForwardMenuSentStoryboard">
            <DoubleAnimation Storyboard.TargetName="ForwardMenuOverlay"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             To="0"
                             Duration="0:0:0.4"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Notif"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             From="0"
                             To="1"
                             Duration="0:0:0.4"
                             AutoReverse="False">
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBox"
                             Storyboard.TargetProperty="(UIElement.Height)"
                             To="65"
                             Duration="0:0:0.4"
                             EnableDependentAnimation="True"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBoxTransform" 
                             Storyboard.TargetProperty="Y"
                             Duration="0:0:0.4" To="0" x:Name="SentTransformAnimation" >
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="ForwardMenuSent2Storybard">
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBox"
                             Storyboard.TargetProperty="(UIElement.Height)"
                             To="0"
                             Duration="0:0:0.3"
                             EnableDependentAnimation="True"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <DataTemplate x:Name="ContactsListViewTemplate">
            <Grid Width="80" Height="140" VerticalAlignment="Top" Padding="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid>
                        <Ellipse x:Name="Placeholder" Width="48" Height="48" VerticalAlignment="Top" Grid.Column="1" Stroke="White" StrokeThickness="1" Fill="{Binding PlaceHolderColor}"  />
                        <TextBlock Text="{Binding FullName, Converter={StaticResource InitialNameStringConverter}}"  TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                    <Ellipse Width="48"
                             Height="48"
                             Margin="0,0,0,0"
                             RelativePanel.AlignVerticalCenterWithPanel="True"
                             RelativePanel.AlignLeftWithPanel="True">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding With.Photo, Converter={StaticResource DefaultPhotoConverter}}" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
                <TextBlock Text="{Binding FullName}" Grid.Row="1" TextWrapping="Wrap" TextAlignment="Center" Margin="0,8,0,16" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <!-- Forward Menu -->
        <Grid Visibility="{Binding ForwardingMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <Interactivity:Interaction.Behaviors>
                <Interactions:DataTriggerBehavior Binding="{Binding Visibility, ElementName=fDialog}" Value="Visible">
                    <Interactions:CallMethodAction MethodName="InitDialog" TargetObject="{Binding ElementName=fDialog}" />
                </Interactions:DataTriggerBehavior>
            </Interactivity:Interaction.Behaviors>

            <!-- Overlay -->
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.5" x:Name="ForwardMenuOverlay" Tapped="ForwardCancel_Tapped"></Grid>
            <!-- END OF Overlay-->

            <Grid x:Name="ForwardMenuBox" Background="{ThemeResource AppBarBackground}" BorderThickness="1" BorderBrush="Gray" Height="500">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="ForwardMenuBoxTransform"></TranslateTransform>
                </Grid.RenderTransform>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="56" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid x:Name="ForwardHeader">
                            <Button FontFamily="Segoe MDL2 Assets"
                                Content="&#xE11A;"
                                Width="48"
                                Height="48"
                                Background="Transparent"
                                Tapped="ForwardSearchButton_Tapped" />
                            <TextBlock Text="Forward message"
                                   Margin="50,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="18"/>
                        </Grid>
                        <TextBox PlaceholderText="Search for contacts"
                             Margin="12,12,56,12"
                             Visibility="Collapsed"
                             x:Name="ForwardSearchBox"
                             TextChanged="ForwardSearchBox_TextChanged"
                             LostFocus="ForwardSearchBox_LostFocus" />
                        <Button FontFamily="Segoe MDL2 Assets"
                                Content="&#xE10A;"
                                Width="48"
                                Height="48"
                                Background="Transparent"
                                HorizontalAlignment="Right"
                                Tapped="ForwardCancel_Tapped" />
                    </Grid>
                    <GridView Grid.Row="1" 
                          Margin="0,8,0,0" 
                          ItemTemplate="{StaticResource ContactsListViewTemplate}"
                          x:Name="FContactsList"
                          SelectionChanged="FContactsList_SelectionChanged">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>

                    <Grid Grid.Row="2" Background="Gray" />
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="Write a message (optional)"
                             x:Name="ForwardMessage"
                             Grid.Column="0"
                             KeyDown="ForwardMessage_KeyDown"
                             BorderThickness="0"
                             Padding="12" />
                        <Button FontFamily="Segoe MDL2 Assets"
                            Content="&#xE122;"
                            Width="48"
                            Height="48"
                            Background="{ThemeResource TelegramBackgroundAccentBrush}"
                            FontSize="20"
                            HorizontalAlignment="Right"
                            Grid.Column="1"
                            x:Name="ForwardButton"
                            Tapped="ForwardButton_Tapped" />
                    </Grid>
                </Grid>

                <Grid Background="{ThemeResource TelegramBackgroundAccentBrush}" Visibility="Collapsed" Opacity="0" x:Name="Notif">
                    <Button x:Name="NotifInner" 
                            VerticalAlignment="Top" 
                            Tapped="NotifInner_Tapped" 
                            PointerEntered="NotifInner_PointerEntered"
                            PointerPressed="NotifInner_PointerEntered"
                            PointerMoved="NotifInner_PointerEntered"
                            PointerExited="NotifInner_PointerLeft"
                            PointerCaptureLost="NotifInner_PointerLeft"
                            PointerReleased="NotifInner_PointerLeft"
                            PointerCanceled="NotifInner_PointerLeft"
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Left" 
                            Background="{ThemeResource TelegramBackgroundAccentBrush}" >
                        <Button.Content>
                            <StackPanel Margin="12,8,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Forwarded to " FontSize="14" FontWeight="SemiBold" />
                                    <TextBlock Text="Batman" FontSize="14" FontWeight="SemiBold" Margin="4,0,0,0" x:Name="recieverName" />
                                </StackPanel>
                                <TextBlock Text="Tap here to go to conversation." Opacity="0.8" FontFamily="12" Margin="0,4,0,4" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <!-- END OF Forward Menu -->

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <!-- Wide state -->
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="520" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ForwardMenuBox.VerticalAlignment" Value="Center" />
                        <Setter Target="ForwardMenuBox.Width" Value="520" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <!-- Narrow state -->
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ForwardMenuBox.VerticalAlignment" Value="Bottom" />
                        <Setter Target="ForwardMenuBox.Width" Value="Auto" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>
