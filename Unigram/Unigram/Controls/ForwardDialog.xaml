<UserControl
    x:Class="Unigram.Controls.ForwardDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Interactions="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Media="using:Microsoft.Xaml.Interactions.Media"
    x:Name="fDialog">

    <UserControl.Resources>

        <Storyboard x:Name="ForwardMenuShowStoryboard">
            <DoubleAnimation Storyboard.TargetName="ForwardMenuOverlay"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             From="0"
                             To="0.5"
                             Duration="00:00:00.200"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBox"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             From="0"
                             To="1"
                             Duration="00:00:00.200"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBoxTransform" 
                             Storyboard.TargetProperty="Y"
                             Duration="0:0:0.2" From="15" To="0" >
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase  EasingMode="EaseOut"  />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="ForwardMenuHideStoryboard">
            <DoubleAnimation Storyboard.TargetName="ForwardMenuOverlay"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             To="0"
                             Duration="00:00:00.200"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBox"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             From="1"
                             To="0"
                             Duration="00:00:00.200"
                             AutoReverse="False">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ForwardMenuBoxTransform" 
                             Storyboard.TargetProperty="Y"
                             Duration="0:0:0.2" From="0" To="15" >
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase  EasingMode="EaseOut"  />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Style x:Name="ContactsListViewStyleHorizontal" TargetType="ListView">
            <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Enabled" />
            <Setter Property="ScrollViewer.VerticalScrollMode" Value="Disabled" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal"
                                    ScrollViewer.HorizontalScrollMode="Enabled"
                                    ScrollViewer.VerticalScrollMode="Disabled"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Width="80">
                            <Grid>
                                <Grid>
                                    <Ellipse x:Name="Placeholder" Width="48" Height="48" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Column="1"/>
                                    <TextBlock Text="{Binding FullName, Converter={StaticResource InitialNameStringConverter}}"  TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Grid>
                                <Ellipse Width="48"
                                         Height="48"
                                         Margin="0,0,0,0"
                                         RelativePanel.AlignVerticalCenterWithPanel="True"
                                         RelativePanel.AlignLeftWithPanel="True">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding With.Photo, Converter={StaticResource DefaultPhotoConverter}}" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                            <TextBlock Text="{Binding FullName}"  TextWrapping="Wrap" TextAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <!-- Forward Menu -->
        <Grid Visibility="{Binding ForwardingMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <Interactivity:Interaction.Behaviors>
                <Interactions:DataTriggerBehavior Binding="{Binding Visibility, ElementName=fDialog}" Value="Visible">
                    <Media:ControlStoryboardAction Storyboard="{StaticResource ForwardMenuShowStoryboard}" ControlStoryboardOption="Play" />
                </Interactions:DataTriggerBehavior>
            </Interactivity:Interaction.Behaviors>

            <!-- Overlay -->
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.5" x:Name="ForwardMenuOverlay" Tapped="ForwardCancel_Tapped"></Grid>
            <!-- END OF Overlay-->

            <Grid x:Name="ForwardMenuBox" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="ForwardMenuBoxTransform"></TranslateTransform>
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="56" />
                    <RowDefinition Height="144" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid x:Name="ForwardHeader">
                        <Button FontFamily="Segoe MDL2 Assets"
                                Content="&#xE11A;"
                                Width="40"
                                Height="40"
                                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                Tapped="ForwardSearchButton_Tapped" />
                        <TextBlock Text="Forward message"
                                   Margin="50,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="18"/>
                    </Grid>
                    <TextBox PlaceholderText="Search for contacts"
                             RequestedTheme="Light"
                             Margin="12"
                             Grid.Row="0"
                             Visibility="Collapsed"
                             x:Name="ForwardSearchBox"
                             TextChanged="ForwardSearchBox_TextChanged" />
                </Grid>
                <ListView Grid.Row="1" 
                          Margin="0,8,0,0" 
                          ItemsSource="{Binding FSearchDialogs}"
                          Style="{StaticResource ContactsListViewStyleHorizontal}"
                          x:Name="FContactsList"
                          SelectionChanged="FContactsList_SelectionChanged" />

                <TextBox PlaceholderText="Write a message (optional)"
                         RequestedTheme="Light"
                         Margin="12"
                         Grid.Row="2"
                         Background="White"
                         x:Name="ForwardMessage"
                         KeyDown="ForwardMessage_KeyDown" />
                <CommandBar Grid.Row="3">
                    <AppBarButton Icon="Cancel" Label="Cancel" Tapped="ForwardCancel_Tapped"></AppBarButton>
                    <AppBarButton Icon="Send" Label="Forward" IsEnabled="False" x:Name="ForwardButton" Tapped="ForwardButton_Tapped"></AppBarButton>
                </CommandBar>
            </Grid>

        </Grid>
        <!-- END OF Forward Menu -->

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <!-- Wide state -->
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="500" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ForwardMenuBox.VerticalAlignment" Value="Center" />
                        <Setter Target="ForwardMenuBox.Width" Value="500" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <!-- Narrow state -->
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ForwardMenuBox.VerticalAlignment" Value="Bottom" />
                        <Setter Target="ForwardMenuBox.Width" Value="Auto" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>
